<div class="card">
  <div class="card-header">
    <h2>Forgot your password ?</h2>
  </div>
  <div class="card-body">
    <h5 class="card-title">Don't Worry we are here to help you !!!!</h5>
    <p class="card-text">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "Email", class:"form-control", placeholder:"Enter Email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions" ,class:"btn btn-danger"%>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </p>
    
  </div>
</div>




