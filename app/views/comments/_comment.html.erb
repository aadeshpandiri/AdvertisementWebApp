<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Comment</th>
      <th scope="col">Commented by</th>
      <th scope="col">Created at</th>
      <th scope="col"><th>
    </tr>
  </thead>
  <tbody>
    <tr>
      
      <td><%= comment.body %></td>
      <td><%= comment.name %></td>
      <td><%= time_ago_in_words(comment.created_at) %> ago..</td>
      <td><%= link_to "Delete Comment", [comment.advertisement,comment],method: :delete, data:{confirm:"Are you sure?"},class: "btn btn-danger" %></td>
    </tr>
    
    
  </tbody>
</table>
